<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar')%>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>

    <section id="appointment" class="appointment section-bg">
        <div class="container">
            <div class="section-title">
                <h2>Book Appointment</h2>
                <p>Select your convenient date and time of appointment with appropriate mode of appointment along with
                    some personal details.</p>
            </div>
            <form action="/bookslot/<%=doctorid%>&<%=pickedDate%>" method="POST" role="form" class="php-email-form">
                <div class="row">
                    <div class="col-md-4 form-group"> <input type="text" name="patientName" class="form-control"
                            id="name" placeholder="Your Name" required="required">
                        <div class="validate"></div>
                    </div>
                    <div class="col-md-4 form-group mt-3 mt-md-0"> <input type="email" class="form-control" name="email"
                            id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email">
                        <div class="validate"></div>
                    </div>
                    <div class="col-md-4 form-group mt-3 mt-md-0"> <input type="tel" class="form-control" name="phoneno"
                            id="phone" placeholder="Your Phone" data-rule="minlen:10"
                            data-msg="Please enter at least 10 chars">
                        <div class="validate"></div>
                    </div>
                </div><br>
                <div class="row">
                    <div class="col-md-6 form-group mt-3 mt-md-0"> <select name="mode" id="department"
                            class="form-control form-select"><i class="fa fa-chevron-down"></i>
                            <option value="" disabled selected>Select Mode of Appointment</option>
                            <option value="video">Video Call</option>
                            <option value="chat">Chat</option>
                        </select>
                        <div class="validate"></div>
                    </div>
                    <!-- <label translate="yes">Select Booking Slot</label> -->

                </div>

                <!-- <div class="row">
                    <div class="col-md-3">

                    </div>
                </div> -->


                <div class="form-group mt-3">
                    <textarea class="form-control" name="message" rows="5" placeholder="Message (Optional)"></textarea>
                    <div class="validate"></div>
                </div>

                <div>
                    <h4>Select a slot (<%=slotCount%> slots available)</h4>
                    <% slots.forEach(slot=> { %>

                        <% if (slot.booked) { %>
                            <div class="slot disabled">
                                <input disabled type="radio" name="selectedSlot" value="<%=slot.slotId%>" />
                                <div><span>
                                        <%=slot.slotTime%>
                                    </span></div>
                            </div>
                            <% }else{ %>
                                <div class="slot">
                                    <input type="radio" name="selectedSlot" value="<%=slot.slotId%>" />
                                    <div><span>
                                            <%=slot.slotTime%>
                                        </span></div>
                                </div>
                                <%}%>


                                    <% }) %>


                                        <!-- <div class="slot">
                        <input type="radio" id="feature1" name="lol" />
                        <div><span>8:00 - 8:30</span></div>

                    </div>
                    <div class="slot disabled">
                        <input type="radio" id="feature1" name="lol" />
                        <div><span>8:00 - 8:30</span></div>
                    </div> -->
                </div> <br>

                <!-- <div class="mb-3"><div class="loading">Loading</div><div class="error-message"></div><div class="sent-message">Your appointment request has been sent successfully. Thank you!</div></div> -->
                <div class="text-center"><button type="submit">Book Appointment</button></div>
            </form>
        </div>
    </section>

