      <script>
        const currUser = <%-JSON.stringify(user) %>;

        $(document).ready(function () {
          if (currUser && currUser.preferredLanguage == -1) {
            $("#exampleModal").modal("show");
          }

        })

        $(document).ready(function () {
          setTimeout(() => {
            if (!currUser || currUser.preferredLanguage == 0) {
              return
            }
            let a = document.querySelector(".goog-te-combo");
            console.log(a)

            a.selectedIndex = currUser.preferredLanguage;
            a.dispatchEvent(new Event('change'));
          }, 1300);
        })

      </script>

