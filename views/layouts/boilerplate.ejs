          'yellow_crust_ooze']

        const symptomContainer = document.getElementById('container-dropdown')

        symptomslist.forEach(element => {
          const a = document.createElement("a")
          a.classList.add('dropdown-item')
          a.textContent = element
          symptomContainer.appendChild(a)
        });

        function search_symptoms() {
          // console.log('om')
          var idk = document.getElementById('chatInput').value
          // console.log(idk)
          // let idk = document.getElementById('searchbar').value
          idk = idk.toLowerCase();
          let x = document.getElementsByClassName('dropdown-item');

          for (i = 0; i < x.length; i++) {
            if (!x[i].innerHTML.toLowerCase().includes(idk)) {
              x[i].style.display = "none";
            }
            else {
              x[i].style.display = "inline-block";
            }
          }
        }

        const symptomSuggestBtns = document.getElementsByClassName('dropdown-item')

        for (const btn of symptomSuggestBtns) {
          btn.addEventListener("click", selectSuggestedSymptom);
        }

        function selectSuggestedSymptom(event) {
          // console.log('event')
          const symp = event.target.innerHTML
          document.getElementById('chatInput').value = symp
        }

      </script>

